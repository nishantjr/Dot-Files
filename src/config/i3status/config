general {
    colors = true
    interval = 5
}

order += "volume master"
order += "wireless wlp3s0"
order += "ethernet eth0"
order += "battery 0"

order += "tztime date-west"
order += "tztime date-east"

order += "tztime C-U"
order += "tztime UTC"
order += "tztime mumbai"
order += "tztime tokyo"

wireless wlp3s0 {
    format_up = "%quality %essid (%ip)"
    format_down = ""
}

ethernet eth0 {
    # if you use %speed, i3status requires root privileges
    format_up = "E: %ip"
    format_down = ""
}

battery 0 {
    format = "%status %percentage %remaining"
    format_down = ""
    status_chr = "‚ö°"
    status_bat = "üîã"
    status_full = "‚úÖ"
    hide_seconds = true
    last_full_capacity = true
}

tztime tokyo {
    format = "Êù±‰∫¨ %H:%M"
    timezone = "Asia/Tokyo"
}
tztime mumbai {
    format = "‡§Æ‡•Å‡§Ç‡§¨‡§à %H:%M"
    timezone = "Asia/Kolkata"
}
tztime UTC {
    format = "UTC %H:%M"
    timezone = "UTC"
}
tztime "C-U" {
    format = "CU %H:%M"
    timezone = "America/Chicago"
}

tztime date-west {
    format = "    %a %d"
    timezone = "America/Chicago"
}

tztime date-east {
    format = "%a %d    "
    timezone = "Asia/Tokyo"
}

volume master {
    format = "‚ô¨ %volume"
    format_muted = "üö´ %volume"
}
