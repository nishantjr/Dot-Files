[user]
    email = nishantjr@gmail.com
    name = Nishant Rodrigues

[color]
    ui = auto
    whitespace = red reverse

[color.diff]
    ; plain = normal        ; context text
    meta = green            ; meta-information
    frag = yellow           ; hunk header
    old = red               ; removed lines
    new = blue              ; added lines
    ; commit = normal       ; commit headers
    ; whitespace = normal   ; whitespace errors

[pull]
    rebase = true

[push]
    default = tracking  ; current branch only to tracked upstream branch
    recurseSubmodules = check

[alias]
    br    = branch -v
    bra   = branch -v -a
    c     = commit -v
    ca    = commit -v --all
    l     = log --pretty="format:%C(auto)%h%C(auto,red)%d\\ %Creset%s%C(auto,blue)\\ [%aN]%Creset"
    lf    = log --pretty="format:%C(auto)%h\\ %s\\ %C(auto,blue)[%cN]%w(0,2,2)%C(auto)%n%-D%+b"
    graph = !git l --graph  --all
    st    = status --branch --short
    vi    = !vi $(find $(git status --short | cut -b 4-) -type f)
    pushf = push --force-with-lease

[log]
    date=short

[fetch]
    recurseSubmodules = true

[commit]
    verbose = true

[url "git@github.com:"]
    pushInsteadOf = https://github.com/
