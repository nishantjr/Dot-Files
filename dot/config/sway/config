set $mod Mod4

# Display Configuration
# ---------------------

output eDP-1    pos 0 1480
output HDMI-A-1 pos 1920 0

output HDMI-A-1 transform 270

workspace 90 output HDMI-A-1
workspace 91 output HDMI-A-1
workspace 92 output HDMI-A-1

output "*" bg ~/.config/sway/background.jpg fill


# Keyboard Configuration
# ----------------------

input type:keyboard {
    xkb_options caps:none
}

# Allows using numpad numbers as workspaces immediately
input "*" xkb_numlock enabled


# Mouse Configuration
# -------------------

# Click with two fingers for right-click, three for middle.
input "*" click_method clickfinger


# Appearance
# ----------

font pango:Noto Sans 8

gaps inner 10

# class                 border  backgr. text    indicator child_border
client.focused          #4c7899 #285577 #ffffff #2e9ef4   #285577
client.focused_inactive #333333 #5f676a #ffffff #484e50   #5f676a
client.unfocused        #333333 #222222 #ffffff #292d2e   #222222
client.urgent           #2f343a #900000 #ffffff #900000   #900000
client.placeholder      #000000 #0c0c0c #ffffff #000000   #0c0c0c
client.background       #ffffff


# Window management & Input interaction
# -------------------------------------

focus_follows_mouse no
workspace_auto_back_and_forth yes
focus_wrapping yes

for_window [window_role="pop-up"] floating enable

# Startup Applications
# --------------------

exec --no-startup-id dbus-update-activation-environment --systemd WAYLAND_DISPLAY XDG_CURRENT_DESKTOP=sway
exec --no-startup-id pactl load-module module-switch-on-connect

# Screen sharing
exec --no-startup-id /usr/lib/xdg-desktop-portal-wlr
exec --no-startup-id XDG_CURRENT_DESKTOP=sway /usr/lib/xdg-desktop-portal

# Redshift
exec --no-startup-id gammastep -l 40:-88 -b 1.0:0.5

# Notification Daemon
exec --no-startup-id dunst

# Status bar
exec --no-startup-id waybar

# Shortcuts
# ---------

# use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# kill focused window
bindsym $mod+Shift+q kill

# Launchers and menus.
bindsym $mod+d                  exec bemenu-run
bindsym $mod+return             exec njr-terminal
bindsym $mod+backspace          exec firefox
bindsym $mod+shift+backspace    exec firefox --private-window

bindsym $mod+delete             exec dmenu-power-options
bindsym $mod+print              exec grim -g "$(slurp)" - | wl-copy
bindsym $mod+n                  exec redshift -o 3200
bindsym $mod+shift+n            exec redshift -x

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# Resize focused window
bindsym $mod+Control+h resize shrink width
bindsym $mod+Control+l resize grow   width
bindsym $mod+Control+j resize shrink height
bindsym $mod+Control+k resize grow   height

# Move workspace
bindsym $mod+Control+Shift+h move workspace to output left
bindsym $mod+Control+Shift+j move workspace to output down
bindsym $mod+Control+Shift+k move workspace to output up
bindsym $mod+Control+Shift+l move workspace to output right

# split
bindsym $mod+b split h
bindsym $mod+v split v

# split and make tabbed
# XXX: Ideally this would detect if the container is
# already tabbed, and run the command for the currently focused application.
# That would effectivly let you open new tabs for things like ranger, terminals
# and browsers
bindsym $mod+t  split horizontal; layout tabbed

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen

# change container layout (stacked, tabbed, default)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout default

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
#bindsym $mod+d focus child

# Workspace and Workrooms
# -----------------------

# We group workspaces into groups of six workrooms.
# grave through 6 selects the workspace, while 7 through 0 selects the workroom.
# - and = are special workspaces for comms and settings.
# (Stolen from https://www.reddit.com/r/swaywm/)

set $workspace 0
set $workroom  1
workspace number 90

# Constants to allow juxtaposing numbers with variable names.
set $w0 0; set $w1 1; set $w2 2; set $w3 3; set $w4 4; set $w5 5; set $w6 6

# switch to workspace
bindsym $mod+grave      set $$workspace 0; workspace --no-auto-back-and-forth number $$workroom$$workspace
bindsym $mod+1          set $$workspace 1; workspace --no-auto-back-and-forth number $$workroom$$workspace
bindsym $mod+2          set $$workspace 2; workspace --no-auto-back-and-forth number $$workroom$$workspace
bindsym $mod+3          set $$workspace 3; workspace --no-auto-back-and-forth number $$workroom$$workspace
bindsym $mod+4          set $$workspace 4; workspace --no-auto-back-and-forth number $$workroom$$workspace
bindsym $mod+5          set $$workspace 5; workspace --no-auto-back-and-forth number $$workroom$$workspace
bindsym $mod+6          set $$workspace 6; workspace --no-auto-back-and-forth number $$workroom$$workspace

# switch to workroom
bindsym $mod+7          set $$workroom  1; workspace --no-auto-back-and-forth number $$workroom$$workspace
bindsym $mod+8          set $$workroom  2; workspace --no-auto-back-and-forth number $$workroom$$workspace
bindsym $mod+9          set $$workroom  3; workspace --no-auto-back-and-forth number $$workroom$$workspace
bindsym $mod+0                             workspace number 90
bindsym $mod+minus                         workspace number 91
bindsym $mod+equal                         workspace number 92

# Movement
bindsym $mod+Shift+grave move workspace number $$workroom$w0
bindsym $mod+Shift+1     move workspace number $$workroom$w1
bindsym $mod+Shift+2     move workspace number $$workroom$w2
bindsym $mod+Shift+3     move workspace number $$workroom$w3
bindsym $mod+Shift+4     move workspace number $$workroom$w4
bindsym $mod+Shift+5     move workspace number $$workroom$w5
bindsym $mod+Shift+6     move workspace number $$workroom$w6
bindsym $mod+Shift+7     move workspace number 1$$workspace
bindsym $mod+Shift+8     move workspace number 2$$workspace
bindsym $mod+Shift+9     move workspace number 3$$workspace
bindsym $mod+Shift+0     move workspace number 90
bindsym $mod+Shift+minus move workspace number 91
bindsym $mod+Shift+equal move workspace number 92

# rename workspaces
bindsym $mod+r exec njr-i3-rename-workspace

bindsym $mod+Shift+r reload
bindsym $mod+Control+Shift+q exit

# F5 and F6 correspond to brightness controls on the ThinkPad
bindsym XF86MonBrightnessDown exec --no-startup-id brightnessctl set -e 10-
bindsym XF86MonBrightnessUp   exec --no-startup-id brightnessctl set -e +10
bindsym $mod+F5               exec --no-startup-id brightnessctl set -e 10-
bindsym $mod+F6               exec --no-startup-id brightnessctl set -e +10

bindsym XF86AudioPlay         exec --no-startup-id playerctl play-pause
bindsym XF86AudioPause        exec --no-startup-id playerctl pause
bindsym XF86AudioNext         exec --no-startup-id playerctl next
bindsym XF86AudioPrev         exec --no-startup-id playerctl previous

bindsym XF86AudioMute         exec --no-startup-id pactl set-sink-mute 0 toggle
bindsym XF86AudioLowerVolume  exec --no-startup-id pactl set-sink-volume 0 -5%
bindsym XF86AudioRaiseVolume  exec --no-startup-id pactl set-sink-volume 0 +5%
# Thinkpad:
bindsym $mod+F1               exec --no-startup-id pactl set-sink-mute 0 toggle
bindsym $mod+F2               exec --no-startup-id pactl set-sink-volume 0 -5%
bindsym $mod+F3               exec --no-startup-id pactl set-sink-volume 0 +5%

# Lock screen
bindsym $mod+F12              exec --no-startup-id slock

